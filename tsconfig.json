{
   "compilerOptions": {
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "strictNullChecks": true,
      "target": "ESNext",
      "module": "esnext",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "lib": ["dom", "dom.iterable", "esnext"],
      "declaration": true,
      "allowJs": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react-jsx",
      "incremental": false,
      "outDir": "./dist",
      "paths": {
         "@/*": ["./src/*"]
      }
   },
   "include": ["src"],
   "exclude": ["node_modules"]
}
